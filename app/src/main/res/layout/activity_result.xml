<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center_horizontal"
    android:padding="20dp"
    android:background="@drawable/bg"
    tools:context=".ResultActivity">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        >

        <TextView
            android:fontFamily="@font/quicksand"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:text="Result"
            android:textColor="@color/white"
            android:textSize="30sp"
            android:textStyle="bold" />

        <ImageView
            android:layout_marginTop="10dp"
            android:id="@+id/share"
            android:layout_weight="0.25"
            android:layout_width="31dp"
            android:layout_height="36dp"
            android:layout_gravity="right"
            android:layout_marginStart="190dp"
            android:padding="1dp"
            app:srcCompat="@drawable/share"
            tools:ignore="RtlHardcoded"
            android:contentDescription="share_button_Description" />

        <ImageView
            android:layout_weight="0.25"
            android:layout_marginStart="8dp"
            android:id="@+id/iv_info"
            android:layout_width="28dp"
            android:layout_height="34dp"
            app:srcCompat="@drawable/info"
            android:contentDescription="info_button_description" />


    </LinearLayout>


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:gravity="center_horizontal"
            >
    <ImageView
        android:layout_marginTop="10dp"
        android:id="@+id/iv_trophy"
        android:layout_width="342dp"
        android:layout_height="374dp"
        android:padding="15dp"
        android:layout_gravity="center_horizontal"
        app:srcCompat="@drawable/winner"
        android:contentDescription="result_image" />



    <TextView
        android:id="@+id/wish_congratulation"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:fontFamily="@font/quicksand"
        android:text="Hey Congratulations"
        android:textColor="@color/white"
        android:textSize="25sp"
        android:textStyle="bold" />


    <TextView
        android:id="@+id/tv_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textStyle="bold"
        android:text="Username"
        android:fontFamily="@font/quicksand"
        android:gravity="center"
        android:textColor="@color/white"
        android:layout_marginTop="15dp"
        android:textSize="20sp"
        />


    <TextView
        android:id="@+id/tv_score"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="your score is 0 out of 10"
        android:gravity="center"
        android:fontFamily="@font/quicksand"
        android:textSize="18sp"
        android:textColor="@android:color/secondary_text_dark"
        android:layout_marginBottom="10dp"
        />
            <TextView
                android:id="@+id/tv_percent"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="your score is 0 out of 10"
                android:gravity="center"
                android:fontFamily="@font/quicksand"
                android:textSize="18sp"
                android:textColor="@android:color/secondary_text_dark"
                android:layout_marginBottom="25dp"
                />




    <Button
        android:id="@+id/btn_result_analysis"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_marginTop="2dp"
        android:text="result analysis"
        android:fontFamily="@font/quicksand"
        android:backgroundTint="@android:color/white"
        android:textSize="18sp"
        android:textColor="@color/design_default_color_primary"
        android:textStyle="bold"
        />


    <Button
        android:id="@+id/btn_finish"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_marginTop="10dp"
        android:text="finish"
        android:fontFamily="@font/quicksand"
        android:backgroundTint="@android:color/white"
        android:textSize="18sp"
        android:textColor="@color/design_default_color_primary"
        android:textStyle="bold"
        />
        </LinearLayout>
    </ScrollView>

</LinearLayout>